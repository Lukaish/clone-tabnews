#!/bin/sh

echo "ğŸ” Verificando por segredos no commit..."

# Arquivos staged para commit
FILES=$(git diff --cached --name-only)

EXIT_CODE=0

for FILE in $FILES; do
  # Ignora arquivos binÃ¡rios
  if file "$FILE" | grep -qE 'binary'; then
    continue
  fi

  # Verifica padrÃµes comuns
  if grep -En "AKIA[0-9A-Z]{16}" "$FILE" > /dev/null 2>&1; then
    echo "âŒ Segredo AWS Access Key detectado em $FILE"
    EXIT_CODE=1
  fi

  if grep -En "AIza[0-9A-Za-z-_]{35}" "$FILE" > /dev/null 2>&1; then
    echo "âŒ Segredo Google API Key detectado em $FILE"
    EXIT_CODE=1
  fi

  if grep -En "xox[baprs]-[0-9a-zA-Z]{10,}" "$FILE" > /dev/null 2>&1; then
    echo "âŒ Token Slack detectado em $FILE"
    EXIT_CODE=1
  fi

  if grep -En "-----BEGIN PRIVATE KEY-----" "$FILE" > /dev/null 2>&1; then
    echo "âŒ Chave privada detectada em $FILE"
    EXIT_CODE=1
  fi

  if grep -En "ghp_[0-9A-Za-z]{36}" "$FILE" > /dev/null 2>&1; then
    echo "âŒ GitHub Token detectado em $FILE"
    EXIT_CODE=1
  fi
done

if [ $EXIT_CODE -ne 0 ]; then
  echo "ğŸš« Commit bloqueado. Remova os segredos antes de commitar."
  exit 1
fi

exit 0
